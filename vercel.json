{
  "buildCommand": "next build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_SWC_MINIFY": "false",
    "DISABLE_SWC": "true"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_SWC_MINIFY": "false",
      "DISABLE_SWC": "true"
    }
  }
} 